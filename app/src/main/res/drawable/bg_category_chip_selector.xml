<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/chipBgSelected"/>
            <corners android:radius="20dp"/>
            <padding android:left="12dp" android:top="8dp" android:right="12dp" android:bottom="8dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/chipBgNormal"/>
            <stroke android:width="1dp" android:color="@color/chipStroke"/>
            <corners android:radius="20dp"/>
            <padding android:left="12dp" android:top="8dp" android:right="12dp" android:bottom="8dp"/>
        </shape>
    </item>
</selector>

